class Animal:

    def __init__(self, nome, comprimento, patas, cor, velocidade):
        self.nome = nome
        self.comprimento = comprimento
        self.patas = patas
        self.cor = cor
        self.velocidade = velocidade

    def exibir (self):
        print("Nome:", self.nome)
        print("Comprimento:", self.comprimento)
        print("Patas:", self.patas)
        print("Cor:", self.cor)
        print("Velocidade:", self.velocidade)


class Peixe(Animal):
    def __init__(self, nome, comprimento, cor, velocidade, caracteristica):
        super().__init__(nome, comprimento, 0, cor, velocidade)
        self.caracteristica = caracteristica

    def exibir_peixe(self):
        print("Nome:", self.nome)
        print("Comprimento:", self.comprimento)
        print("Patas:", self.patas)
        print("Cor:", self.cor)
        print("Velocidade:", self.velocidade)
        print("Caracteristica:", self.caracteristica)

dourado = Peixe("Pablo", "50cm", "amarelo", "10km", "peixe pocpoc")
dourado.exibir_peixe()
dog = Animal("Mel", 0.50, 4, "mel", 25)
dog.exibir()

