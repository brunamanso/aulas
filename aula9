class Motor:
    def __init__(self, cilindrada, potencia):
        self.cilindrada = cilindrada
        self.potencia = potencia


class Veiculo:
    def __init__(self, peso, velocidade_maxima, preco, tipo_motor):
        self.peso = peso
        self.velocidade_maxima = velocidade_maxima
        self.preco = preco
        self.tipo_motor = tipo_motor


class CarroPasseio (Veiculo):
    def __init__(self, peso, velocidade_maxima, preco, tipo_motor, cor, modelo):
        super().__init__(peso, velocidade_maxima, preco, tipo_motor)
        self.cor = cor
        self.modelo = modelo


class Caminhao (Veiculo):
    def __init__(self, peso, velocidade_maxima, preco, tipo_motor, tonelada, altura, comprimento):
        super().__init__(peso, velocidade_maxima, preco, tipo_motor)
        self.tonelada = tonelada
        self.altura = altura
        self.comprimento = comprimento


motor = Motor(200, 300)

ferrari = CarroPasseio(1000, 300, 1000000000, motor, "vermelha", "ferrari 2020")
print(ferrari.preco)
