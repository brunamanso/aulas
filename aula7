class CarroCorrida:
    def __init__(self, numero, piloto, velocidade):
        self.__numero_carro = numero
        self.__nome_piloto = piloto
        self.__velocidade_maxima = velocidade
        self.__velocidade_atual = 0
        self.__ligado = False

    def get_numero_carro(self):
        return self.__numero_carro

    def get_nome_piloto(self):
        return self.__nome_piloto

    def get_velocidade_maxima(self):
        return self.__velocidade_maxima

    def get_velocidade_atual(self):
        return self.__velocidade_atual

    def get_ligado(self):
        return self.__ligado

    def set_numero_carro(self, num):
        self.__numero_carro = num

    def set_nome_piloto(self, num):
        self.__nome_piloto = num

    def set_velocidade_maxima(self, num):
        self.__velocidade_maxima = num

    def set_velocidade_atual(self, num):
        self.__velocidade_atual = num

    def set_ligado(self, num):
        self.__ligado = num

    def ligar(self):
        self.__ligado = True

    def desligar(self):
        self.__ligado = False

    def acelerar(self, num):
        if self.__ligado is True:
            if self.__velocidade_atual + num <= self.__velocidade_maxima:
                self.__velocidade_atual += num
            else:
                self.__velocidade_atual = self.__velocidade_maxima

    def frear(self):
        self.__velocidade_atual = 0


carrocorrida = CarroCorrida(7, "bruna", 50)
carrocorrida.ligar()
carrocorrida.acelerar(30)
print(carrocorrida.get_velocidade_atual())
carrocorrida.frear()
print(carrocorrida.get_velocidade_atual())

